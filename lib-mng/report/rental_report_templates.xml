<?xml version="1.0" encoding="utf-8"?>

<odoo>
   <report
        id="report_rental"
        model="library.rental"
        string="Rental Report"
        name="lib-mng.report_rental_document"
        file="lib-mng.report_rental"
        report_type="qweb-html"/>

    <template id="report_rental_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 t-field="doc.name" class="mt16"/>
                        <div class="row mt32 mb32" id="rental_info">

                            <div class="col-auto mw-100 mb-2">
                                <strong>Rental Duration:</strong>
                                <t t-if="doc.start_date">
                                    <span t-field="doc.start_date"/>
                                </t>
                                to 
                                <t t-if="doc.end_date">
                                    <span t-field="doc.end_date"/>
                                </t>
                            </div>

                            <div t-if="doc.customer_ids" class="col-auto mw-100 mb-2">
                                <strong>Customer:</strong>
                                <span t-field="doc.customer_ids.name"/>
                            </div>
                        </div>

                        <h4>Information</h4>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th name="th_name">Name</th>
                                    <th name="th_phone">Phone</th>
                                    <th name="th_email">Email</th>
                                </tr>
                            </thead>

                            <tbody>
                                <t t-foreach="doc.customer_ids" t-as="customer">
                                    <tr>
                                        <td t-if="customer.name" name="td_name">
                                            <span t-field="customer.name"/>
                                        </td> 
                                        <td t-if="customer.phone" name="td_phone">
                                            <span t-field="customer.phone"/>
                                        </td>
                                        <td t-if="customer.email" name="td_email">
                                            <span t-field="customer.email"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>