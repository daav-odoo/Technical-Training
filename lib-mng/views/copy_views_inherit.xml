<?xml version="1.0" encoding="utf-8"?>

<odoo>
   <data>
       
       <record model="ir.ui.view" id="view_order_form_delegation_library">
           <field name="name">library.management.form.delegation.library</field>
           <field name="model">library.management</field>
           <field name="copy_id" ref="copy.view_order_form"></field>
           <field name="arch" type="xml">
                <xpath expr="//sheet//notebook" position="inside">
                    <page string="Copys" attrs="{'invisible':[('ref','=',False)]}">
                            <tree>
                                <field name="ref"/>
                                <field name="author"/>
                                <field name="ISBN"/>
                            </tree>
                    </page>
                </xpath>

           </field>
       </record>
       
    </data>
</odoo>