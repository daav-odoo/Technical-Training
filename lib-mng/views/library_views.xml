<?xml version="1.0" encoding="utf-8"?>

<odoo>
   <data>
       
        <record model="ir.ui.view" id="book_view_form">
            <field name="name">library.management.form</field>
            <field name="model">library.management</field>
            <field name="arch" type="xml">
                <form string="Book Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name="author"/>
                            </group>
                            <group>
                                <field name="ISBN"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Note">
                                <field name="note"/>
                            </page>
                            <page string="Rentals">
                                <field name="rental_id"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
       
       <record model="ir.ui.view" id="book_view_list">
           <field name="name">library.management.list</field>
           <field name="model">library.management</field>
           <field name="arch" type="xml">
               <tree string="Book List">
                   <field name="name"/>
                   <field name="author"/>
                   <field name="ISBN"/>
               </tree>
           </field>
       </record>
       
       <record model="ir.ui.view" id="book_view_search">
           <field name="name">library.management.search</field>
           <field name="model">library.management</field>
           <field name="arch" type="xml">
               <search>
                    <field name="name"/>
                    <field name="author"/>
                    <field name="ISBN"/>
               </search>
           </field>
       </record>
       
       
    </data>
</odoo>
