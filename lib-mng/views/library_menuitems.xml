<?xml version="1.0" encoding="utf-8"?>

<odoo>
   <data>
        <record model="ir.actions.act_window" id="book_list_action">
            <field name="name">Books</field>
            <field name="res_model">library.management</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first book
                </p>
            </field>
        </record>   
       
       <record model="ir.actions.act_window" id="rental_list_action">
            <field name="name">Rentals</field>
            <field name="res_model">library.rental</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first rental
                </p>
            </field>
        </record>  
       
       <menuitem name="Library" id="menu_library"
                 sequence="1"/>
       
        <menuitem id="menu_library_sub" name="Options" parent="menu_library" sequence="2"/>
       
       
       <menuitem id="menu_library_courses" name="Books" parent="menu_library_sub" sequence="3" action="book_list_action"/>
       
        <menuitem name="Rentals" id="menu_library_rental" parent="menu_library_sub"
           sequence="4" action="rental_list_action"/>
       
    </data>
</odoo>
